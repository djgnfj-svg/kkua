# Security Configuration
SECRET_KEY=your-secret-key-here-please-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://postgres:your-strong-password-here@db:5432/mydb
DATABASE_USER=postgres
DATABASE_PASSWORD=your-strong-password-here
DATABASE_NAME=mydb
DATABASE_HOST=db
DATABASE_PORT=5432

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Environment
ENVIRONMENT=development

# Testing
TESTING=false

# Session Configuration
SESSION_TIMEOUT=86400  # 24 hours in seconds
SESSION_SECURE=false   # Set to true in production with HTTPS
SESSION_SAMESITE=lax   # lax, strict, or none

# Security Headers
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000  # 1 year in seconds