[bandit]
# Bandit configuration file for KKUA backend security scanning
exclude_dirs = tests,alembic,scripts
skips = B101,B601

# B101: assert_used - Allow assert statements in tests
# B601: paramiko_calls - We don't use paramiko

[bandit.assert_used]
# Allow assert in test files
skips = ['*test*', '*tests*']

[bandit.hardcoded_password_string]
# Skip password checks in configuration files
word_list = example,sample,test,demo