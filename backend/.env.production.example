# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Security Configuration (REQUIRED - Must be changed)
SECRET_KEY=CHANGE-THIS-TO-A-VERY-STRONG-SECRET-KEY-IN-PRODUCTION

# Database Configuration (Production PostgreSQL)
DATABASE_URL=postgresql://user:password@production-db-host:5432/kkua_prod
DATABASE_USER=kkua_user
DATABASE_PASSWORD=STRONG-SECURE-PASSWORD
DATABASE_NAME=kkua_prod
DATABASE_HOST=production-db-host
DATABASE_PORT=5432

# Redis Configuration (Production Redis)
REDIS_URL=redis://production-redis-host:6379/0

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Configuration (Production domains)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Environment
ENVIRONMENT=production

# Testing
TESTING=false

# Session Configuration (Production Security)
SESSION_TIMEOUT=3600  # 1 hour in production for security
SESSION_SECURE=true   # Required for HTTPS
SESSION_SAMESITE=strict  # Strict for production security

# Security Headers (Production)
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000  # 1 year

# Monitoring & Error Tracking (Production Sentry)
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1   # 10% sampling in production
SENTRY_PROFILES_SAMPLE_RATE=0.1 # 10% profiling in production

# Logging Configuration
LOG_LEVEL=INFO
USE_JSON_LOGGING=true

# Rate Limiting (Production)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# SSL/TLS Configuration (if needed)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem