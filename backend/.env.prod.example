# ================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ================================================
# WARNING: This file contains production configuration templates.
# Copy to .env.prod and update with secure values.
# NEVER commit .env.prod to version control!

# Security Configuration - CRITICAL: Change these values!
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-64-CHARACTER-RANDOM-STRING-FOR-PRODUCTION
REDIS_URL=redis://redis:6379/0

# Database Configuration - CRITICAL: Use strong passwords!
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}
DATABASE_USER=postgres
DATABASE_PASSWORD=CHANGE-THIS-TO-A-STRONG-DATABASE-PASSWORD
DATABASE_NAME=kkua_prod
DATABASE_HOST=db
DATABASE_PORT=5432

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Environment
ENVIRONMENT=production

# CORS Configuration - CRITICAL: Update with your actual domain!
CORS_ORIGINS=["https://your-production-domain.com", "https://www.your-production-domain.com"]

# Session Configuration - Production Security
SESSION_TIMEOUT=86400  # 24 hours in seconds
SESSION_SECURE=true    # MUST be true in production with HTTPS
SESSION_SAMESITE=strict  # Use strict for production security

# Security Headers - Production Hardening
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000  # 1 year in seconds

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
ENABLE_ACCESS_LOGS=true
ENABLE_ERROR_LOGS=true

# Testing
TESTING=false

# Monitoring (Optional - configure if using monitoring services)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# DATADOG_API_KEY=your-datadog-api-key