# 프로덕션 환경 설정
ENVIRONMENT=production
DEBUG=false

# 포트 설정
BACKEND_PORT=8000
FRONTEND_PORT=80
NGINX_PORT=80

# 데이터베이스 설정
POSTGRES_DB=kkua_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-db-password-here

# 연결 URL
DATABASE_URL=postgresql://postgres:your-secure-db-password-here@db:5432/kkua_db
REDIS_URL=redis://redis:6379/0

# 애플리케이션 보안 키 (배포 전에 반드시 변경하세요!)
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# CORS 설정 (실제 도메인으로 변경하세요!)
CORS_ORIGINS=http://54.180.88.143

# 프론트엔드 환경 변수
VITE_API_URL=http://54.180.88.143
VITE_WS_URL=ws://54.180.88.143/ws
VITE_NODE_ENV=production
VITE_DEBUG=false

# 게임 설정
VITE_GAME_TIMER_DURATION=30000
VITE_RECONNECT_INTERVAL=5000
VITE_MAX_RECONNECT_ATTEMPTS=3

# SSL 인증서 (선택사항)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# 서버 설정
SERVER_HOST=0.0.0.0
SERVER_PORT=80

# 모니터링
ENABLE_MONITORING=true
LOG_LEVEL=INFO

# 타임존
TZ=Asia/Seoul

# Compose 프로필 (nginx 활성화)
COMPOSE_PROFILES=production